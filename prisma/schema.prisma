datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  salt     String
  name     String
  image    Image? @relation(fields: [imageId], references: [id])
  imageId  Int?   @unique
}

model Session {
  id      Int      @id @default(autoincrement())
  session String   @unique
  userId  Int
  ttl     DateTime
}

model Image {
  id   Int    @id @default(autoincrement())
  url  String @unique
  user User?
}

enum Category {
  MUSIC
  FILM
  HISTORY
  SCIENCE
}

model Fact {
  id        Int      @id @default(autoincrement())
  category  Category
  content   String   @unique
  createdAt DateTime
  updatedAt DateTime
}
